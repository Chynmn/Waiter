<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/layout_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="#B22222"
                android:textSize="30dp"
                android:text=" 가게 등록하기"
                android:fontFamily="@font/godom"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:background="#FFF0F5"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:text="가게 주소 검색"
                    android:fontFamily="@font/godom"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="20dp"
                    android:text="먼저 사장님의 가게를 주소검색을 통해 등록하여주세요"
                    android:fontFamily="@font/godom"
                    />

                <EditText
                    android:id="@+id/storeAddressEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:hint=" 식당 주소를 입력해 주세요."
                    android:inputType="textEmailAddress"
                    android:paddingRight="10dp"
                    android:textColorHint="#BAB8B8"
                    android:textSize="15dp"
                    android:theme="@style/EditTextStyle" />

                //주소 검색 api를 사용하기 위한 버튼
                <Button
                    android:id="@+id/searchAddress"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_layout_set"
                    android:textColor="@color/white"
                    android:text="주소 검색 버튼"
                    android:fontFamily="@font/godom"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:text="사업자 번호"
                    android:fontFamily="@font/godom"
                    />
                <EditText
                    android:id="@+id/storeCorpNumEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#BAB8B8"
                    android:hint=" 사업자 번호를 입력해 주세요."
                    android:textSize="15dp"
                    android:theme="@style/EditTextStyle"
                    android:paddingRight="10dp"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/registrationBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_layout_set"
                android:text="나의 식당 등록하기!"
                android:textColor="@color/white"
                android:fontFamily="@font/godom"/>
        </LinearLayout>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.naver.maps.map.MapFragment"/>
    </LinearLayout>

</ScrollView>